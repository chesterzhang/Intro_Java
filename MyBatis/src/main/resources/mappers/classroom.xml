<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="classroom">
    <resultMap id="rmClassroom" type="indi.chester.mybatis.entity.Classroom" >
        <id column="classroom_id" property="classroomId"></id>
        <collection property="studentList"  select="student.selectByClassroomId" column="classroom_id"/>
    </resultMap>
    <select id="selectOneToMany" resultMap="rmClassroom">
        SELECT * FROM school.t_classroom LIMIT 0, 1
    </select>
    
    <select id="selectById" parameterType="Integer" resultType="indi.chester.mybatis.entity.Classroom">
        SELECT * FROM school.t_classroom WHERE classroom_id= #{value} LIMIT 0,1
    </select>

</mapper>