<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="student">

    <select id="selectByClassroomId" parameterType="Integer" resultType="indi.chester.mybatis.entity.Student">
        SELECT * FROM school.t_student WHERE  classroom_id=#{value }
    </select>

    
    <resultMap id="rmStudent" type="indi.chester.mybatis.entity.Student">
        <id column="student_id" property="studentId"/>
        <association property="classroom"  select="classroom.selectById" column="classroom_id"/>
    </resultMap>
    <select id="selectManyToOne" resultMap="rmStudent">
        SELECT  * FROM school.t_student LIMIT 0,1
    </select>

    <select id="selectOne"  resultType="indi.chester.mybatis.entity.Student">
        SELECT  * FROM school.t_student LIMIT 0,1
    </select>

</mapper>